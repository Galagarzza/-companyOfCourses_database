CREATE TABLE alumnos ( 
Id INT AUTO_INCREMENT PRIMARY KEY,
Nombre VARCHAR(255) NOT NULL,
Profesor_id INT NOT NULL, 
FOREIGN KEY (Profesor_id) REFERENCES profesores(Id)
)


